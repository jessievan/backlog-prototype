%h1.page-header
  Capture and Prioritize
  %small
    = link_to "Start planning", @program.plan
.row
  .span6
    = link_to "Add Objective", new_objective_path, class: 'btn btn-primary'
    %hr
    %h6 
      Objectives
      %small.pull-right 
        Select objectives for comparison
    %ul.objectives.unstyled
      -@program.objectives.each do |objective|
        %li.objective{'data-objective-id' => objective.id }
          .row
            .span3
              .handle.icon-align-justify
              = objective.title
            .span1
              Value:
              = objective.value
            .span1
              Cost:
              = objective.cost
            .span1
              = check_box "compare", objective.id, :class => 'compare_checkbox pull-right', 'data-title' => objective.title, 'data-value' => objective.value, 'data-cost' => objective.cost
  .span6  
    .well
      #chart
